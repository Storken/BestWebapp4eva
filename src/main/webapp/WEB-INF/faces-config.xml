<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- Main router -->
 <navigation-rule>
     <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>home</from-outcome>
        <to-view-id>index.xhtml</to-view-id>
    </navigation-case>
     <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>products</from-outcome>
        <to-view-id>partials/products.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>dashboard</from-outcome>
        <to-view-id>partials/dashboard.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>profile</from-outcome>
        <to-view-id>partials/profile.xhtml</to-view-id>
    </navigation-case>
</navigation-rule>       
<navigation-rule>
    <from-view-id>/index.html</from-view-id>
    <navigtion-case>
            <from-action>#{authEntityCtrl.create}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>partials/dashboard.xhtml</to-view-id>
            <redirect/>
    </navigtion-case>
    <navigtion-case>
            <from-action>#{authEntityCtrl.login}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>partials/dashboard.xhtml</to-view-id>
            <redirect/>
    </navigtion-case>
</navigation-rule>
    


</faces-config>
