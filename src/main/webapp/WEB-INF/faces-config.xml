<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- Main router -->
 <navigation-rule>
     <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>home</from-outcome>
        <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
     <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>products</from-outcome>
        <to-view-id>/partials/product/products.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>dashboard</from-outcome>
        <to-view-id>/partials/dashboard.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>profile</from-outcome>
        <to-view-id>/partials/profile.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>categories</from-outcome>
        <to-view-id>/partials/category/categories.xhtml</to-view-id>
    </navigation-case>
</navigation-rule>
<navigation-rule>
    <from-view-id>index.xhtml</from-view-id>
    <navigation-case>
        <from-action>#{authBean.login}</from-action>
        <from-outcome>success</from-outcome>
        <to-view-id>partials/dashboard.xhtml</to-view-id>
        <redirect/>
    </navigation-case>
    <navigation-case>
        <from-action>#{authBean.login}</from-action>
        <from-outcome>fail</from-outcome>
        <to-view-id>index.html</to-view-id>
        <redirect/>
    </navigation-case>
</navigation-rule>
    


</faces-config>
